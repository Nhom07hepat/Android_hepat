<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/mCardview"
                    app:cardCornerRadius="20dp"
                    android:elevation="8dp"
                    android:backgroundTint="#ECF0ED"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                        <ImageView
                                            android:id="@+id/imvicon_user"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@drawable/ic_baseline_account_circle_24"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="1"/>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_weight="4">
                                                <TextView
                                                    android:id="@+id/txtName_User"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text=""
                                                    android:textSize="22sp"
                                                    android:textStyle="bold"
                                                    android:layout_marginBottom="5dp"
                                                    android:layout_marginLeft="10dp"/>
                                                <TextView
                                                    android:id="@+id/txtThoiGian"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="vài giây trước"
                                                    android:textSize="14sp"
                                                    android:layout_marginLeft="10dp"/>
                                        </LinearLayout>
                                        <ImageButton
                                            android:id="@+id/imbtnMore"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@null"
                                            android:minWidth="48dp"
                                            android:minHeight="48dp"
                                            android:src="@drawable/ic_baseline_more_horiz_24"
                                            android:layout_weight="1"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/txtContent"
                                            android:layout_width="310dp"
                                            android:layout_height="wrap_content"
                                            android:text="Cho mình hỏi cách thanh toán tại bệnh viện như thế nào ạ ?"
                                            android:textSize="18sp"
                                            android:layout_marginRight="18dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_marginLeft="20dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end">
                                        <Button
                                            android:id="@+id/btnCommentDienDan"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/ic_baseline_mode_comment_24"
                                            android:backgroundTint="@color/white"
                                            android:text="Bình luận"
                                            android:textSize="12sp"
                                            android:textColor="@color/black"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="30dp"
                                            android:layout_marginBottom="10dp"/>
                                </LinearLayout>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
        </ScrollView>

</LinearLayout>