                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:text="8h - 9h"
                                android:textColor="#34D16D"
                                android:textSize="20sp" />

