<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">
<ImageView
    android:id="@+id/imvKhunglichkhamhientai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/nen_9"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txtHospitalNameht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bệnh viện Từ Dũ"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/imvKhunglichkhamhientai"
        app:layout_constraintLeft_toLeftOf="@id/imvKhunglichkhamhientai"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtHospitalTimeht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00 AM"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalNameht"
        app:layout_constraintLeft_toLeftOf="@id/imvKhunglichkhamhientai"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
       />
    <TextView
        android:id="@+id/txtHospitalDateht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/09/21"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalNameht"
        app:layout_constraintLeft_toRightOf="@id/txtHospitalTimeht"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/imvConfrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalNameht"
        app:layout_constraintRight_toLeftOf="@id/txtHospitalConfrirm"
        app:layout_constraintLeft_toRightOf="@id/txtHospitalDateht"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/txtHospitalConfrirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã xác nhận"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalNameht"
        app:layout_constraintLeft_toRightOf="@id/imvConfrim"
        android:layout_marginTop="24dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnHuy"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:backgroundTint="#DDE6E5"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalTimeht"
        app:layout_constraintLeft_toLeftOf="@id/imvKhunglichkhamhientai"
        android:layout_marginLeft="35dp"
     android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnChinhsua"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa"
        android:backgroundTint="#37D16D"
        app:layout_constraintTop_toBottomOf="@id/txtHospitalTimeht"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/imvKhunglichkhamhientai"
        android:layout_marginRight="35dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>